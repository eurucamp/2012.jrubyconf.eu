- ie_html :lang => 'en', :class => 'no-js' do
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %title= [current_page.data.title, 'JRubyConf EU'].compact.flatten.join(' | ')
    %meta(content="" name="description")
    %meta(content="" name="author")
    %meta(content="width=device-width, initial-scale=1.0" name="viewport")
    = feed_tag :atom, "/feed.xml", :title => "ATOM"

    %link(href="favicon.ico" rel="shortcut icon")

    = stylesheet_link_tag 'screen'

    %script(src="/javascripts/lib/modernizr.js")
    %script(src="http://use.typekit.com/uxm6bkh.js")

    :javascript
      try { Typekit.load(); } catch(e) {};

  %body(class="#{current_page.data.body_class}")
    #container
      %a.theme-toggle(href="#" title="Toggle theme") Toggle theme
      = link_to '#footer', :id => 'jump-to-nav' do
        %img(src="/images/layout/jump_to_main_nav.png" width="20" height="13" alt="Jump to main navigation")

      = wrapped :header, :id => 'header' do
        = partial 'partials/header'

      #main(role="main")
        = yield

      = wrapped :footer, :id => 'footer' do
        = partial 'partials/footer'
        %script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyAOu7SQll9IyZ_csBrwRS7WBh-6by8_IQE&sensor=true")
        = javascript_include_tag 'application'


